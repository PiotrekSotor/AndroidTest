<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:background="#000000">


    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#111111"
        android:stretchColumns="*"
        >

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="30dp">


            <com.example.piotrek.voicerecording.MediaRecordActivity.RecordButton
                android:id="@+id/recordButton"
                android:layout_weight="1"
                android:text="Start recording"
                android:textColor="#eeeeee"
                android:layout_column="0" />

            <com.example.piotrek.voicerecording.MediaRecordActivity.PlayButton
                android:id="@+id/playButton"
                android:layout_weight="1"
                android:text="Start playing"
                android:textColor="#eeeeee"
                android:layout_column="1" />


        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            >

            <SeekBar
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/seekBar"
                android:layout_column="0"
                android:layout_weight="1"
                android:indeterminate="false"
                android:progress="0"
                android:padding="10dp"
                android:max="200"
                android:foregroundGravity="center_vertical"
                android:contextClickable="false"
                android:layout_span="2" />
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal"
            >

            <com.example.piotrek.voicerecording.Tools.Timer
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:id="@+id/timer"
                android:layout_span="2"
                android:gravity="center_horizontal"
                android:textSize="64sp"
                android:textColor="#ccc5d4" />
        </TableRow>

    </TableLayout>

</RelativeLayout>
